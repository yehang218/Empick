<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.piveguyz.empickbackend.mailTemplate.query.mapper.MailTemplateMapper">
    <resultMap id="MailTemplateResultMap" type="com.piveguyz.empickbackend.mailTemplate.query.dto.MailTemplateQueryDTO">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="member_id" property="memberId"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findAll" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content,
            is_deleted,
            member_id,
            updated_at
        FROM mail_template
        WHERE is_deleted != 'Y';
    </select>

    <select id="findByTitle" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content,
            is_deleted,
            member_id,
            updated_at
        FROM mail_template
        WHERE title = #{title}
        AND is_deleted != 'Y';
    </select>

    <select id="searchByTitle" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content,
            is_deleted,
            member_id,
            updated_at
        FROM mail_template
        WHERE title LIKE CONCAT('%', #{title}, '%')
          AND is_deleted != 'Y';
    </select>

    <select id="findById" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content,
            is_deleted,
            member_id,
            updated_at
        FROM mail_template
        WHERE id = #{id}
        AND is_deleted != 'Y';
    </select>

</mapper>